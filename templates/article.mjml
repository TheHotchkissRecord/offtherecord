<!-- Start of an article preview -->
<mj-section full-width="full-width" background-color="#ffffff" padding-bottom="0">
  <mj-column width="100%">
    <!-- Thumbnail -->
  </mj-column>
</mj-section>
<!-- Start of text -->
<mj-section background-color="#ffffff" padding-left="15px" padding-right="15px">
  <mj-column width="100%">
    <mj-text color="#637381" font-size="12px" align=right padding-right="5px">
      <i>%Caption</i>
    </mj-text>
    <mj-text color="#212b35" font-weight="bold" font-size="20px">
      %Title
    </mj-text>
    <mj-text color="#212b35" font-size="12px" height=15px font-weight="bold">
      %Author
    </mj-text>
    <mj-text color="#637381" font-size="16px">
      %Preview
    </mj-text>
    <mj-button background-color="#202F5A" align="center" color="#ffffff" font-size="17px" font-weight="bold" href="%Link" width="300px">
      Continue Reading
    </mj-button>
  </mj-column>
</mj-section>
<!-- End of text-->
<!-- End of an article -->
